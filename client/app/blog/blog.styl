// Variables
blogColor = #006140
bannerHeight = 450px
clear = rgba(255, 255, 255, 0)
postHeight = 600px

// Header
.blog-hero-unit
    background blogColor
    color #F5F5F5
    position relative
    text-align center
    // text-align right
    text-shadow 0 1px 0 rgba(0, 0, 0, 0.1)

// Blogs
.blog-post
    height postHeight
    text-align center

.inner-blog-post
    height postHeight - 30
    // margin 0px 30px
    background-color rgba(0, 97, 64, 0.05)
    transition all .35s

.inner-blog-post:hover
    box-shadow 2px 2px 2px 2px rgba(0, 0, 0, 0.15)

gradientFrom = rgba(0, 0, 0, 0.2)
gradientTo = rgba(0, 0, 0, 0,)
.blog-header
    height postHeight * 0.4
    color white
    background linear-gradient(gradientFrom, gradientTo 40%, gradientTo 60%, gradientFrom)

.blog-header h1
    padding-top 100px

.blog-date
    margin-top 60px
    margin-right 5px // maybe use bottom and right?

.blog-tag
    margin-left 8px
    margin-top 5px

.blog-description
    padding 20px

.blog-arrow
    position absolute
    bottom 20px
    right 25px
    transition all .35s

.blog-arrow:hover
    transform scale(1.05)

.blog-footer
    position absolute
    width 94.8%
    bottom 10px
    height 5px
