div(ng-include='"components/navbar/navbar.html"')

//- Header
header.banner.blog-hero-unit
  .container
    h1 Blog
    p.lead Freelance Fullstack iOS and Web Developer
//- Blog section    
.container(style="margin-top:15px")
  div.col-md-6.blog-post(ng-repeat="post in posts")
    div.inner-blog-post
      div.blog-header(style="background-color:{{post.color}}")
        h1 {{post.title}}
        p.lead {{post.date}}
      div.blog-triangle(style="border-top: 70px solid {{post.color}}")
      div.blog-description
        p {{post.description}}
      div.blog-footer(style="background-color:{{post.color}}")
        h1 i
        
div(ng-include='"components/footer/footer.html"')
