// Variables
mainColor = #34495E
bannerHeight = 450px
clear = rgba(255, 255, 255, 0)

.thing-form
    margin 20px 0

// Header Section
header .container
    position relative
    top 50%
    transform translateY(-50%)

.banner
    border-bottom none
    // margin-top -20px
    margin-top -100px
    height bannerHeight

.banner h1
    font-size 60px
    letter-spacing -1px
    line-height 1

.main-hero-unit
    background mainColor
    color #F5F5F5
    position relative
    text-align center
    // text-align right
    text-shadow 0 1px 0 rgba(0, 0, 0, 0.1)

// About Section
#about
    color mainColor

.description-image
    height 140px
    margin 30px 0px

// Skils Section
.skill-list
    height 60px
    text-align center

.skill-list p
    position relative
    // top 50%
    transform translateY(40%)

// Skill List
