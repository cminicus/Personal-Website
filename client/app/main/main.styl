// Variables
mainColor = #34495E
bannerHeight = 450px

// Header Section
header .container
    position relative
    top 50%
    transform translateY(-50%) // 30 for text

header h1
    margin-top 40px

.banner
    border-bottom none
    margin-top -72px
    height bannerHeight

.banner h1
    font-size 60px
    letter-spacing -1px
    line-height 1

.main-hero-unit
    background mainColor
    color #F5F5F5
    position relative
    text-align center
    text-shadow 0 1px 0 rgba(0, 0, 0, 0.1)

.svg-stroke
    stroke-dasharray 2000
    stroke-dashoffset 2000

// Offerings Section
.description-image
    height 140px
    margin 30px 0px

// About Section
.blue-background
    color mainColor

.about-me
    font-size 15px
    line-height 23px

.white-background
    background-color mainColor
    color white
    padding-bottom 50px

// Skils Section
.skill-list
    height 70px
    margin-bottom 65px

.skill-list p
    margin-bottom 5px

.skill-list img
    margin-top 10px
    margin-right 15px

// Footer Styles
.footer
    border-top 1px solid #E5E5E5
    margin-top 70px
    padding 30px 0
    text-align center
